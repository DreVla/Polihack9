<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/artist_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join a growing\n community of \nmusic\n producers!"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/kodcha"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/artist_login_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-240dp"
        android:text="Login with soundcloud"
        android:fontFamily="@font/kodcha"
        android:background="@drawable/drawable_button"
        android:shadowColor="#5E5E5E"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="20dp"/>

</RelativeLayout>